<!DOCTYPE html>
<html>
  <head>
    <title>MyWinery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<nav>
      <ul>
        <!-- Neutral Links -->
        <li><%= link_to "Home", root_path %></li>

        <% unless logged_in? %>
          <li><%= link_to "Signup", signup_path %></li>
          <li><%= link_to "Login", login_path %></li>
        <% else %>
          <li>Welcome Back, <%= current_user.email %></li>
          <li><%= link_to "Wines", user_wines_path(current_user) %></li>
          <li><%= link_to "Create Wine", new_user_wine_path(current_user) %></li>
          <li><%= link_to "Logout", logout_path, method: "delete" %></li>
        <% end %>
      </ul>
    </nav>

  <body>
    <%= yield %>
  </body>
</html>
