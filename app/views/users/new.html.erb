<h1>User Sign Up</h1>
<% if !!flash[:errors] %>
   <% flash[:errors].each do |e| %>
    <p><%= e %></p> <br>
    <% end %>
<% end %>

<%= form_for(@user) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Sign Up" %>


<% end %>

<br /><%= link_to 'Register with Github', '/auth/github' %><br />

<br /><%= link_to 'Log in', login_path %>