<%= form_for user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <h5>Email will be used as your username</h5>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
 

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit button_name, class: "btn" %>


<% end %>